[loggers]
keys=root,mqtt,bluetooth,biosticker,oximeter,database

[handlers]
keys=consoleHandler,mqttFileHandler,databaseFileHandler,bluetoothFileHandler

[formatters]
keys=simpleFormatter

[logger_root]
handlers=

[logger_database]
level=DEBUG
handlers=consoleHandler
qualname=database

[logger_mqtt]
level=DEBUG
handlers=mqttfileHandler,consoleHandler
qualname=mqtt

[logger_bluetooth]
level=DEBUG
handlers=consoleHandler
qualname=bluetooth


[logger_oximeter]
level=DEBUG
handlers=consoleHandler
qualname=ble-oxi


[logger_biosticker]
level=DEBUG
handlers=consoleHandler
qualname=ble-bio

[handler_databaseFileHandler]
class=handlers.TimedRotatingFileHandler
formatter=simpleFormatter
level=INFO
args=('logs/database/database.log','M',10)

[handler_bluetoothFileHandler]
class=handlers.TimedRotatingFileHandler
formatter=simpleFormatter
level=INFO
args=('logs/acquisition/bluetooth.log','M',10)

[handler_mqttFileHandler]
class=handlers.TimedRotatingFileHandler
formatter=simpleFormatter
level=INFO
args=('logs/mqtt/mqtt.log','M',10)

[handler_consoleHandler]
class=StreamHandler
formatter=simpleFormatter
level=DEBUG
args=(sys.stdout,)

[formatter_simpleFormatter]
format=%(asctime)s - %(name)s - %(levelname)s - %(message)s
datefmt=